{
  "name": "neoluma",
  "main": "./dist/extension.js",
  "displayName": "Neoluma",
  "description": "A language support plugin with syntax highlighting, IntelliSense, and more.",
  "publisher": "TsukimotoX",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neoluma",
        "aliases": [
          "Neoluma",
          "neoluma"
        ],
        "extensions": [
          ".nm",
          ".nlp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "neoluma",
        "scopeName": "source.neoluma",
        "path": "./syntaxes/neoluma.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  }
}
